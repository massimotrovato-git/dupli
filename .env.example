# ── Core ──────────────────────────────────────────────
APP_ENV=dev                         # dev | prod
APP_BASE_URL=https://localhost      # Your public URL (use https://localhost for local dev)
APP_SECRET_KEY=change-me            # python3 -c "import secrets; print(secrets.token_urlsafe(32))"

# ── Postgres ──────────────────────────────────────────
POSTGRES_DB=dupli
POSTGRES_USER=dupli
POSTGRES_PASSWORD=change-me         # Use a strong password in production
POSTGRES_HOST=postgres              # Docker service name
POSTGRES_PORT=5432

# ── Redis ─────────────────────────────────────────────
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=                     # Optional: set a password for Redis

# ── Keycloak ──────────────────────────────────────────
KEYCLOAK_REALM=dupli
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=change-me   # Admin console password
KEYCLOAK_URL=http://keycloak:8080   # Internal Docker URL (do NOT change)
KEYCLOAK_HOST_PORT=8081             # Host port for Keycloak admin console

# ── oauth2-proxy (OIDC -> Keycloak) ──────────────────
OAUTH2_PROXY_CLIENT_ID=oauth2-proxy
OAUTH2_PROXY_CLIENT_SECRET=change-me                    # Must match realm-export.json client secret
# Generate cookie secret: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
OAUTH2_PROXY_COOKIE_SECRET=change_me_32_bytes_base64________
OAUTH2_PROXY_EMAIL_DOMAIN=*
OAUTH2_PROXY_REDIRECT_URL=https://localhost/oauth2/callback  # Must match Keycloak client redirect URI
OAUTH2_PROXY_COOKIE_SECURE=true     # Set to "false" for local dev with self-signed certs

# ── Telegram ingest ──────────────────────────────────
TELEGRAM_API_ID=12345               # From https://my.telegram.org
TELEGRAM_API_HASH=change-me
TELEGRAM_SESSION_STRING=            # Telethon StringSession (see README_DEPLOY.md to generate)
TELEGRAM_SOURCE_CHAT_ID=0           # Numeric chat id, e.g. -100123...
TELEGRAM_SOURCE_CHAT_TITLE=signals

# ── Executors ─────────────────────────────────────────
CTRADER_ENABLED=false
MT5_GATEWAY_URL=http://mt5-gateway:8090
MT5_ENABLED=true

